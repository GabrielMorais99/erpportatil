{
    "version": 2,
    "functions": {
        "api/load.js": {
            "maxDuration": 10
        },
        "api/save.js": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/js/(?!api)(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/gerenciamento.html",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(?!api)(.*\\.(css|js|html))",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(?!api)(.*)",
            "dest": "/api/index.js"
        }
    ]
}
