{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/js/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(.*\\.(css|js))",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ]
}
