{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "functions": {
        "api/load.js": {
            "maxDuration": 10
        },
        "api/save.js": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/load",
            "dest": "/api/load.js"
        },
        {
            "src": "/api/save",
            "dest": "/api/save.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/js/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/gerenciamento.html",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(.*\\.(css|js|html))",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ]
}
