{
    "version": 2,
    "functions": {
        "api/load.js": {
            "maxDuration": 10
        },
        "api/save.js": {
            "maxDuration": 10
        },
        "api/admin.js": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/load",
            "dest": "/api/load.js"
        },
        {
            "src": "/api/save",
            "dest": "/api/save.js"
        },
        {
            "src": "/api/admin",
            "dest": "/api/admin.js"
        },
        {
            "src": "/images/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/css/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/js/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/public/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/lib/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/sw.js",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/manifest.json",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, max-age=3600"
            }
        },
        {
            "src": "/gerenciamento.html",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(.*\\.(css|js|html))",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
            }
        },
        {
            "src": "/(?!api)(.*)",
            "dest": "/api/index.js"
        }
    ]
}
