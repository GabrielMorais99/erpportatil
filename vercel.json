{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "npm run build",
    "builds": [
        { "src": "api/**/*.js", "use": "@vercel/node" },
        { "src": "index.html", "use": "@vercel/static" },
        { "src": "gerenciamento.html", "use": "@vercel/static" },
        { "src": "manifest.json", "use": "@vercel/static" },
        { "src": "version.json", "use": "@vercel/static" },
        { "src": "sw.js", "use": "@vercel/static" },
        { "src": "css/**", "use": "@vercel/static" },
        { "src": "js/**", "use": "@vercel/static" },
        { "src": "dist/**", "use": "@vercel/static" },
        { "src": "images/**", "use": "@vercel/static" },
        { "src": "public/**", "use": "@vercel/static" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate, max-age=0"
                },
                { "key": "Pragma", "value": "no-cache" },
                { "key": "Expires", "value": "0" },
                { "key": "CDN-Cache-Control", "value": "no-store" },
                { "key": "Vercel-CDN-Cache-Control", "value": "no-store" },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://unpkg.com https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: blob:; connect-src 'self'"
                }
            ]
        }
    ],
    "rewrites": [
        { "source": "/api/load", "destination": "/api/load.js" },
        { "source": "/api/save", "destination": "/api/save.js" },
        { "source": "/api/admin", "destination": "/api/admin.js" },
        {
            "source": "/api/crypto-config",
            "destination": "/api/crypto-config.js"
        }
    ]
}
